{
  "unit_test_dqn": {
    "agent": [{
      "name": "DQN",
      "algorithm": {
        "name": "DQN",
        "action_policy": "boltzmann",
        "action_policy_update": "linear_decay",
        "explore_var_start": 1.5,
        "explore_var_end": 0.3,
        "explore_anneal_epi": 10,
        "gamma": 0.999,
        "training_epoch": 5,
        "training_frequency": 1,
        "training_iters_per_batch": 3,
        "training_min_timestep": 10
      },
      "memory": {
        "name": "Replay",
        "max_size": 1000
      },
      "net": {
        "type": "MLPNet",
        "hid_layers": [64],
        "hid_layers_activation": "sigmoid",
        "optim": {
          "name": "Adam",
          "lr": 0.02
        },
        "batch_size": 32,
        "decay_lr": true,
        "decay_lr_frequency": 400,
        "decay_lr_min_timestep": 1400,
        "update_type": "replace",
        "update_frequency": 1,
        "polyak_weight": 0.9
      }
    }],
    "env": [{
      "name": "CartPole-v0",
      "max_timestep": null,
      "max_episode": 12
    }],
    "body": {
      "product": "outer",
      "num": 1
    },
    "meta": {
      "max_session": 1,
      "max_trial": 1,
      "train_mode": true
    }
  },
  "unit_test_reinforce": {
    "agent": [{
      "name": "Reinforce",
      "algorithm": {
        "name": "Reinforce",
        "action_policy": "default",
        "gamma": 0.95,
        "num_epis_to_collect": 1,
        "add_entropy": false,
        "entropy_weight": 0.01,
        "continuous_action_clip": 2.0
      },
      "memory": {
        "name": "OnPolicyReplay"
      },
      "net": {
        "type": "MLPdefault",
        "hid_layers": [64],
        "hid_layers_activation": "relu",
        "optim": {
          "name": "Adam",
          "lr": 0.01
        },
        "clamp_grad": false,
        "clamp_grad_val": 1.0,
        "decay_lr": false,
        "decay_lr_frequency": 1000,
        "decay_lr_min_timestep": 2000
      }
    }],
    "env": [{
      "name": "CartPole-v0",
      "max_timestep": null,
      "max_episode": 75
    }],
    "body": {
      "product": "outer",
      "num": 1
    },
    "meta": {
      "max_session": 1,
      "max_trial": 1,
      "train_mode": true
    }
  },
  "unit_test_actor_critic": {
    "agent": [{
      "name": "ActorCritic",
      "algorithm": {
        "name": "ActorCritic",
        "action_policy": "default",
        "gamma": 0.99,
        "num_epis_to_collect": 1,
        "add_entropy": false,
        "entropy_weight": 0.01,
        "continuous_action_clip": 2.0,
        "lamda": 1.0,
        "num_step_returns": 100,
        "training_frequency": 32,
        "training_iters_per_batch": 4,
        "use_GAE": true,
        "policy_loss_weight": 1.0,
        "val_loss_weight": 1.0
      },
      "memory": {
        "name": "OnPolicyReplay"
      },
      "net": {
        "type": "MLPseparate",
        "hid_layers": [64],
        "hid_layers_activation": "relu",
        "use_same_optim": false,
        "optim_actor": {
          "name": "Adam",
          "lr": 0.01
        },
        "optim_critic": {
          "name": "Adam",
          "lr": 0.01
        },
        "clamp_grad": false,
        "clamp_grad_val": 1.0,
        "decay_lr": true,
        "decay_lr_frequency": 1000,
        "decay_lr_min_timestep": 2000
      }
    }],
    "env": [{
      "name": "CartPole-v0",
      "max_timestep": null,
      "max_episode": 150
    }],
    "body": {
      "product": "outer",
      "num": 1
    },
    "meta": {
      "max_session": 1,
      "max_trial": 1,
      "train_mode": true
    }
  }
}
